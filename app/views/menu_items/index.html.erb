<h1>All Menu Items</h1>


<table>
    <tr>
        <th>Item</th>
        <th>Price</th>
        <th>Qty</th>
        <th>Actions</th>
    </tr>
    
    <% @items.each do |item| %> 
    <tr>
        <td><%= link_to item.item.capitalize, menu_item_path(item) %></td>
        <td><%= "%.2f" % item.price  %></td>
        <td><%= item.quantity.to_i %></td>
        <td><%=link_to "Edit", edit_menu_item_path(item) %></td>
    </tr>
    <% end %>
</table>
<button><%= link_to "New", new_menu_item_path %></button>